extends winskeleton
block closebutton
  button.closer(type="button",name="cancel")
    i.fa.fa-times
block wincontent
  form#nameform(action="/")
    div.window-content
      p= message
      p
        input.prompt.getfocus(name="name",size="30",required)
      figure(style="float:left")
        img#icondisp(width="48",height="48",alt="頭像")
      p
        input(type="button",name="iconselectbutton",value="選擇頭像")
    p
      input(type="submit",name="ok",value="OK")
      input(type="button",name="cancel",value="取消")



